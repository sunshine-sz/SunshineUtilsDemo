    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sunshine.rxjavademo.view.CameraSurfaceView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
